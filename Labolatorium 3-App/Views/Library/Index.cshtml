@model IEnumerable<Labolatorium_3_App.Models.Library>

@{
    Layout = "_Layout"; // Jeśli masz główny układ strony
}

<style>
    .library-card {
        border: 1px solid #ddd;
        padding: 10px;
        margin-bottom: 20px;
        text-align: center;
    }

    .library-image {
        max-width: 100%;
        height: auto;
        margin-bottom: 10px;
    }
</style>

@foreach (var library in Model)
{
    <div class="library-card">
        <img src="~/Img/bibl@library.Id.jpg" class="library-image" alt="Obraz biblioteki @library.Name" />
        <h2>@library.Name</h2>
        <p>@library.Description</p>
        <a href="@Url.Action("Edit", "Library", new { id = library.Id })" class="btn btn-primary">Edytuj</a>
        <a href="@Url.Action("Delete", "Library", new { id = library.Id })" class="btn btn-danger">Usuń</a>
    </div>
}
