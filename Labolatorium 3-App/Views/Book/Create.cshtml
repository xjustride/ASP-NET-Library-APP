@{
}
<h4>Dodaj książeczkę</h4>
<form asp-controller="Book" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="title"></label>
        <input asp-for="title" /> <br />
        <span class="text-danger" asp-validation-for="title"></span>
    </div>
    <div class="mb-3">
        <label asp-for="page_no"></label>
        <input asp-for="page_no" /> <br />
        <span class="text-danger" asp-validation-for="page_no"></span>
    </div>
    <div class="mb-3">
        <label asp-for="isbn"></label>
        <input asp-for="isbn" /> <br />
        <span class="text-danger" asp-validation-for="isbn"></span>
    </div>
    <div class="mb-3">
        <label asp-for="publicationdate"></label>
        <input asp-for="publicationdate" /> <br />
        <span class="text-danger" asp-validation-for="publicationdate"></span>
    </div>
    <div class="mb-3">
        <label asp-for="publishinghouse"></label>
        <input asp-for="publishinghouse" /> <br />
        <span class="text-danger" asp-validation-for="publishinghouse"></span>
    </div>
    <div>
        <label asp-for="BookStatus">Status dostępności</label>
        <div>
            <span asp-validation-for="BookStatus" class="text-danger"></span>
        </div>
        <select class="form-control" asp-for="BookStatus" asp-items="@Html.GetEnumSelectList<BookStatus>()"></select>
    </div>
    <br>
    <div class="mb-3">
        <button class="btn btn-primary" type="submit">Utwórz</button>
        <button class="btn btn-secondary" type="reset">Wyczyść</button>
    </div>

</form>
